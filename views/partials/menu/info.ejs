<div class="col-sm-12 col-md-6 col-lg-4 mt-3 mt-sm-0 ">
    <div class="card text-dark bg-info col-s12 text-dark">
        <div class="card-body">
            <h5 class="card-title">Info</h5>
            <p class="card-text">
                <div class="col-s12"><i class="fa-solid fa-photo-film"></i> <%= DB_RESPONSE.mimetype %></div>
                <div class="col-s12"><i class="fa-solid fa-eye"></i> <%= DB_RESPONSE.views %></div>
            </p>
        </div>
    </div>

    <% if(MEDIATYPE !== 'application'){ %>
        <div class="col-12 mt-2">
            <div class="row">
                <div class="col-6">
                    <%- include('modal/download_modal') %>
                </div>

                <div class="col-6">
                    <button type="button" class="btn btn-success col-12" data-clipboard-text="<%= S3_RESPONSE.url %>">
                        Copy to clipboard
                    </button>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.10/clipboard.min.js"></script>
                    <script>new ClipboardJS('.btn');</script>
                </div>
            </div>
        </div>
    <% } %>
</div>